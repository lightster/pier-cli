install:
ifeq ($(wildcard $(PREFIX)/bin/pier),)
	ln -sfn $(SRCDIR)/bin/pier $(PREFIX)/bin/pier
endif
ifeq ($(wildcard $(PREFIX)/bin/moor),)
	ln -sfn $(SRCDIR)/bin/moor $(PREFIX)/bin/moor
endif
	(docker network inspect pier-buoy || docker network create pier-buoy) 1>/dev/null 2>/dev/null
	docker-compose build
	docker-compose up -d --force-recreate
